/**me.wxss**/
.header{
  width: 750rpx;
  position: relative;
  height: 353rpx;
}

.header-bg {
  width: 750rpx;
  height: 353rpx;
}

.header-photo{
  width: 114rpx;
  height: 114rpx;
  position: absolute;
  top: 89.5rpx;
  left: 50%;
  margin-left: -57rpx;
}

.header-frame{
  width: 114rpx;
  height: 114rpx;
}

.game-header{
  width: 96rpx;
  height: 96rpx;
  border-radius: 100%;
  position: absolute;
  top: 9rpx;
  left: 8.5rpx;
}

.level-bg{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  bottom: 0;
  right: -10rpx;
}

.level-text{
  color: #ffffff;
  font-size: 12rpx;
  position: absolute;
  bottom: 4rpx;
  right: -5rpx;
}

.game-info{
  width: 750rpx;
  text-align: center;
  color: #ffffff;
  font-size: 18rpx;
  position: absolute;
  bottom: 80rpx;
}

.gender{
  width: 22rpx;
  height: 22rpx;
  vertical-align: middle;
}

.main{
  width: 750rpx;
  height: 100%;
}

.nav{
  display: flex;
  flex-direction: row;
  align-items: center;
  background: lightgrey;
  width: 750rpx;
  height: 80rpx;
}

.nav-box{
  border-color:lightgrey;
  background: 0;
  flex: 1;
  text-align: center;
  font-size: 30rpx;
}

.main-view{
  width: 100%;
}

.main-view-item{
  width: 100%;
  background: lightgray;

}

.record-top{
  display: flex;
  flex-direction: row;
  padding: 20rpx 0;
  background: #ffffff;
}

.record-top-left{
  flex: 0.5;
  text-align: center;
  border-right: solid 0.5px gray;
  position: relative;
}

.record-top-right{
  flex:1;
  text-align: center;
}

.dan-img{
  width: 148rpx;
  height: 116rpx;
}

.dan-name{
  flex:0.5;
  display: block;
  font-size: 18rpx;
  color: gray;
  word-spacing: 1px;
  letter-spacing: 1px;
  width: 100%;
  position: absolute;
  bottom: 0;
}

.win-rate-lb,.games-total-lb{
  font-size: 16rpx;
  padding: 0 10rpx;
  display: inline-block;
  vertical-align: middle;
}

.win-rate-vl,.games-total-vl{
  font-size: 46rpx;
  padding: 0 10rpx;
  display: inline-block;
  color: #CC8F33;
  vertical-align: middle;
}

.honor{
  width: 100%;
  display: flex;
  padding-top: 10rpx;
}

.honor-box{
  flex: 1;
}

.honor-box image{
  width: 90rpx;
  height: 90rpx;
}

.honor-box text{
  display: block;
  font-size: 16rpx;
}

.hero-avatar{
  width: 79rpx;
  height:79rpx;
  vertical-align: middle;
}

.my-record{
  width: 100%;
  margin-top: 15rpx;
  background: #ffffff;
  padding: 10rpx 0;
}

.my-record-title{
  font-size: 30rpx;
  margin-left: 2.5%;
}

.record-cell{
  overflow: hidden;
  width: 100%;
}

.cell-date{
  font-size: 16rpx;
  width: 95%;
  text-align: center;
  background: lightgray;
  margin: 5rpx auto;
  color: gray;
  padding: 5rpx 0;
  border-radius: 5rpx;
}

.game-result{
  font-size: 30rpx;
  display: block;
  padding: 5rpx 0;
}

.game-type{
  font-size:16rpx;
  color: gray;
  display: block;
  padding: 5rpx 0;
}

.win{
  color: #36c4cf;
}

.fial{
  color: #ff7578;
}

.win_bg{
  background: #36c4cf;
}

.fial_bg{
  background: #ff7578;
}

.game-box{
  height: 30rpx;
  width: 5rpx;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -15rpx;
}

.cell-main{
  display: flex;
  padding: 15rpx 0;  
  border-bottom: solid 1px lightgray;
}

.cell-left{
  flex: 1;
  text-align: center;
  position: relative;
}

.cell-right{
  flex: 5;
  position: relative;
}

.arrow_right{
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -9rpx;
}